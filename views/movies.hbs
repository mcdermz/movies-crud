<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-lg-12">
      <h1>{{title}}</h1>
      <p>Welcome to {{title}}</p>
      <a href="/movies/new">Add a movie!</a>
      <div>
        {{#each moviesIndex}}
        <ul class="">
          {{#with this}}
          <li class="">
            <a href="/movies/{{id}}">{{title}}</a>
            <form class="" action="/movies/{{id}}/edit">
              <input type="submit" value="Edit" />
            </form>
            <form class="" action="/movies/{{id}}/delete" method="GET">
              <input type="submit" name="delete" value="Delete" />
            </form>
          </li>
          <img src={{poster_url}} alt="">
          <li class=""><span>DIRECTED BY: </span>{{director}}</li>
          <li class=""><span>YEAR: </span>{{year}}</li>
          <li class=""><span>RATING: </span>{{my_rating}}</li>
          {{/with}}
        </ul>
        {{/each}}
      </div>
      <a href="/">GO HOME UR DRUKN</a>
    </div>
  </div>
</div>
